@model AccountInfo
<form class="form-horizontal" id="frmDoiThongTinMatKhau">
    @Html.AntiForgeryToken()
    <input asp-for="AccountId" hidden />
    <div class=" row mb-4">
        <label asp-for="UserName" class="col-md-3 form-label"></label>
        <div class="col-md-9">
            <input asp-for="UserName" class="form-control" readonly>
        </div>
    </div>
    <div class=" row mb-4">
        <label asp-for="FullName" class="col-md-3 form-label"></label>
        <div class="col-md-9">
            <input asp-for="FullName" class="form-control">
        </div>
    </div>
    <div class=" row mb-4">
        <label asp-for="PassWordOld" class="col-md-3 form-label"></label>
        <div class="col-md-9">
            <input asp-for="PassWordOld" id="txt-passwordold" class="form-control">
            <span asp-validation-for="PassWordOld" class="text-danger"></span>
        </div>
    </div>
    <div class=" row mb-4">
        <label asp-for="PassWordNew" class="col-md-3 form-label"></label>
        <div class="col-md-9">
            <input asp-for="PassWordNew" id="txt-passwordnew" class="form-control">
            <small style="color:red">Nhập mật khẩ mới nếu muốn đổi mật khẩu</small><br />
            <small><b style="color:black;text-decoration:underline;padding-left:5px;font-size:15px">Chú ý:</b> Mật khẩu phải 8 ký tự, Có 1 chữ cái thường, 1 chữ cái In hoa,1 số và ký tự đặc biệt.<br>Ví dụ: <b class="fs-15"> Abcd@123</b></small><br>
            <span asp-validation-for="PassWordNew" class="text-danger"></span>
        </div>
    </div>
</form>
