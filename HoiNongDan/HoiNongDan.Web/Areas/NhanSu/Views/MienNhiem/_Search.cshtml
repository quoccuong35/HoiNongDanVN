@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<MienNhiemDetail>
@{
    string CurrentController = ConstController.MienNhiem;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.Actions</th>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.TenCoSo)</th>
            <th>@Html.DisplayNameFor(p => p.TenDonVi)</th>
            <th>@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th>@Html.DisplayNameFor(p => p.SoQuyetDinh)</th>
            <th>@Html.DisplayNameFor(p => p.NgayQuyetDinh)</th>
            @* <th>@Html.DisplayNameFor(p => p.NguoiKy)</th> *@
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.IDQuaTrinhMienNhiem, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen!, item.IDQuaTrinhMienNhiem, listRoles: listRoles)
                </td>
                <td class="text-center">@i</td>
                <td>@item.MaCanBo</td>
                <td>@item.HoVaTen</td>
                <td>@item.TenCoSo</td>
                <td>@item.TenDonVi</td>
                <td>@item.TenChucVu</td>
                <td>@item.SoQuyetDinh</td>
                <td>@item.NgayQuyetDinh</td>
                @* <td>@item.NguoiKy</td> *@
                <td>@item.GhiChu</td>
               
            </tr>
        }
    </tbody>
</table>
