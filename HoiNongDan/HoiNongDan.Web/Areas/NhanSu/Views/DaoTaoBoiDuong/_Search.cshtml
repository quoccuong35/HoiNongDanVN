@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<DaoTaoBoiDuongDetailVM>
@{
    string CurrentController = ConstController.DaoTaoBoiDuong;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<style>
    ::-webkit-scrollbar {
        width: 10px;
    }
</style>
<table id="data-list" class="table border text-nowrap text-md-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.Actions</th>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.TuNgay)</th>
            <th>@Html.DisplayNameFor(p => p.DenNgay)</th>
            <th>@Html.DisplayNameFor(p => p.TenHinhThucDaoTao)</th>
            <th>@Html.DisplayNameFor(p => p.TenLoaiBangCap)</th>
            <th>@Html.DisplayNameFor(p => p.NoiDungDaoTao)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            int css = 0;
            string cssName = "";
        }
        @foreach (var item in Model)
        {
            i++;
            css++;
            if (css > 4)
            {
                css = 1;
            }
            cssName = "tr" + css.ToString();
            <tr class="@cssName">
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ID!.Value, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen!, item.ID!.Value, listRoles: listRoles)
                </td>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.MaCanBo)</td>
                <td>@Html.DisplayFor(p => item.HoVaTen)</td>
                <td>@Html.DisplayFor(p => item.TuNgay)</td>
                <td>@Html.DisplayFor(p => item.DenNgay)</td>
                <td>@Html.DisplayFor(p => item.TenHinhThucDaoTao)</td>
                <td>@Html.DisplayFor(p => item.TenLoaiBangCap)</td>
                <td>@Html.DisplayFor(p => item.NoiDungDaoTao)</td>
                <td>@Html.DisplayFor(p => item.GhiChu)</td>
               
            </tr>
        }
    </tbody>
</table>
