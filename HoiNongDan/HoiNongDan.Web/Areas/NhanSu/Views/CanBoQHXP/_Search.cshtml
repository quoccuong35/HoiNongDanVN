@model IEnumerable<CanBoQHXPDetailVM>
@{
    string CurrentController = ConstController.CanBoQHXP;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table table-bordered text-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">Hành Động</th>
            <th>STT</th>
            <th class="text-center" data-name="HoVaTen">@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NgaySinh)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.GioiTinh)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Cap)</th>
            <th class="text-center" data-name="TenChucVu">@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th class="text-center" data-name="DonVi">@Html.DisplayNameFor(p => p.DonVi)</th>
            <th class="text-center" data-name="TenDanToc">@Html.DisplayNameFor(p => p.TenDanToc)</th>
            <th class="text-center" data-name="TenTonGiao">@Html.DisplayNameFor(p => p.TenTonGiao)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NoiSinh)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.ChoOHienNay)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NgayvaoDangDuBi)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NgayVaoDangChinhThuc)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.ChuyenNganh)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.MaTrinhDoChinhTri)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenTrinhDoNgoaiNgu)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenTrinhDoTinHoc)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NgayThamGiaCongTac)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.ThamGiaBanChapHanh)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.ThamGiaBTV)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.UBKT)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HuyenUyVien)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.DangUyVien)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HDNNCapHuyen)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HDNNCapXa)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NVCTTW)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.GiangVienKiemChuc)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.DanhGiaCBCC)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.DanhGiaDangVien)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.GhiChu)</th>
            
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            int css = 0;
            string cssName = "";
        }
        @foreach (var item in Model)
        {
            i++;
            css++;
            if (css > 2)
            {
                css = 1;
            }
            cssName = "tr" + css.ToString();
            <tr class="@cssName" ondblclick='window.open("/NhanSu/CanBoQHXP/Edit/@item.IDCanBo","_blank")'>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.IDCanBo!.ToString()!, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen, item.IDCanBo!.ToString(), listRoles: listRoles)
                </td>
                <td class="align-middle">
                    @i.ToString()
                </td>
                <td class="align-middle">@item.HoVaTen</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgaySinh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.GioiTinh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.Cap)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenChucVu)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DonVi)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenDanToc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTonGiao)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NoiSinh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ChoOHienNay)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgayvaoDangDuBi)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgayVaoDangChinhThuc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ChuyenNganh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.MaTrinhDoChinhTri)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTrinhDoNgoaiNgu)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTrinhDoTinHoc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgayThamGiaCongTac)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ThamGiaBanChapHanh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ThamGiaBTV)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.UBKT)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.HuyenUyVien)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DangUyVien)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.HDNNCapHuyen)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.HDNNCapXa)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NVCTTW)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.GiangVienKiemChuc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DanhGiaCBCC)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DanhGiaDangVien)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.GhiChu)</td>
               
            </tr>
        }
    </tbody>
</table>