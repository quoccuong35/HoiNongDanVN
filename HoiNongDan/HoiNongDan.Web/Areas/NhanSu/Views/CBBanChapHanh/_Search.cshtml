@model IEnumerable<CBBanChapHanhExcel>
@{
    string CurrentController = ConstController.CBBanChapHanh;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table text-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center" class="text-center" style="vertical-align: middle;" rowspan="2">@LanguageResource.Actions</th>
            <th rowspan="2" style="vertical-align: middle;">STT</th>
            <th rowspan="2" style="vertical-align: middle;">Họ và tên</th>
            <th colspan="2" style="vertical-align: middle;">Chức vụ</th>
            <th colspan="2" style="vertical-align: middle;">Ngày, tháng, năm sinh</th>
            <th rowspan="2" style="vertical-align: middle;">Dân tộc</th>
            <th rowspan="2" style="vertical-align: middle;">Tôn giáo</th>
            <th rowspan="2" style="vertical-align: middle;">Quê quán</th>
            <th rowspan="2" style="vertical-align: middle;">Nơi ở hiện nay</th>
            <th colspan="2" style="vertical-align: middle;">Ngày vào Đảng</th>
            <th colspan="2" style="vertical-align: middle;">Trình độ</th>
            <th rowspan="2" style="vertical-align: middle;">Số điện thoại</th>
            <th rowspan="2" style="vertical-align: middle;">Thời gian chuyển công tác/nghỉ hưu</th>
            <th rowspan="2" style="vertical-align: middle;">Chức vụ mới</th>
        </tr>
        <tr>
            <th>Tên</th>
            <th>Đơn vi</th>
            <th>Nam</th>
            <th>Nữ</th>
            <th>Dự bị</th>
            <th>Chính thức</th>
            <th>Chuyên môn</th>
            <th>LLCT</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            int css = 0;
            string cssName = "";
        }
        @foreach (var item in Model)
        {
            i++;
            css++;
            if (css > 2)
            {
                css = 1;
            }
            cssName = "tr" + css.ToString();
            <tr class="@cssName" ondblclick='window.open("/NhanSu/CanBo/Edit/@item.IDCanBo","_blank")'>
                <td class="text-center">
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen, item.IDCanBo!.ToString(), listRoles: listRoles)
                </td>
                <td>@i</td>
                <td class="align-middle">@item.HoVaTen</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenChucVu)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DonVi)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgaySinh_Nam)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgaySinh_Nam)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenDanToc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTonGiao)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NoiSinh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ChoOHienNay)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgayvaoDangDuBi)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgayVaoDangChinhThuc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ChuyenNganh)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTrinhDoChinhTri)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.SoDienThoai)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ThoiGianChuyenCogTac)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.ChucVuMoi)</td>
            </tr>
        }
    </tbody>
</table>
