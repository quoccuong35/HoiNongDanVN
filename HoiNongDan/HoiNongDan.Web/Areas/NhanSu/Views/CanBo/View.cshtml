@model ProfileCanBo
@using HoiNongDan.Constant
<div class="main-container container-fluid mt-2">
    <div class="card">
        <div class="card-body">
            <div class="d-flex bg-gray-100">
                <div class="flex-shrink-0 mr-7">
                    <div class="avatar avatar-xxl chat-profile mb-3 brround">
                        <a class="" asp-area="@ConstArea.NhanSu" asp-controller ="@ConstController.CanBo" asp-action="edit" asp-route-id="@Model.CanBo.IDCanBo"><img alt="avatar" src="~/Images/avatar5.png" class="brround"></a>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center justify-content-between flex-wrap mt-2">
                        <div class="w-100">
                            <div class="d-flex align-items-center justify-content-between flex-wrap mt-2">
                                <div class="d-flex flex-wrap my-2">
                                    <div class="d-flex align-items-center flex-lg-fill" style="padding-left:10px">
                                        <a class="text-hover-primary fs-16 fw-600">   @Model.CanBo.HoVaTen.ToUpper()</a>
                                    </div>
                                </div>
                                <div class="my-lg-0 my-1">
                                    <div class="btn-group ml-2">
                                        <button type="button" class="btn btn-light font-weight-bold btn-sm px-3 font-size-base">
                                            <span class="svg-icon svg-icon-2x">

                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
