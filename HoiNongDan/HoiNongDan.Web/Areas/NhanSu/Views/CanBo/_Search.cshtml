}
<table id="data-list" class="table table-bordered text-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th>Đơn vị</th>
            <th>@Html.DisplayNameFor(p => p.NgaySinh)</th>
            <th>@Html.DisplayNameFor(p => p.GioiTinh)</th>
            <th>@Html.DisplayNameFor(p => p.SoQuyetDinhBoNhiem)</th>
            <th>@Html.DisplayNameFor(p => p.TenDanToc)</th>
            <th>@Html.DisplayNameFor(p => p.TenTonGiao)</th>
            <th>@Html.DisplayNameFor(p => p.NoiSinh)</th>
            <th>@Html.DisplayNameFor(p => p.ChoOHienNay)</th>
            <th>@Html.DisplayNameFor(p => p.NgayvaoDangDuBi)</th>
            <th>@Html.DisplayNameFor(p => p.NgayVaoDangChinhThuc)</th>
            <th>@Html.DisplayNameFor(p => p.ChuyenNganh)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoHocVan)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoChuyenMon)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoChinhTri)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoNgoaiNgu)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoTinHoc)</th>
            <th>@Html.DisplayNameFor(p => p.NgayThamGiaCongTac)</th>
            <th>@Html.DisplayNameFor(p => p.NgayThamGiaCapUyDang)</th>
            <th>@Html.DisplayNameFor(p => p.NgayThamGiaHDND)</th>
            <th>@Html.DisplayNameFor(p => p.TenNgachLuong)</th>
            <th>@Html.DisplayNameFor(p => p.BacLuong)</th>
            <th>@Html.DisplayNameFor(p => p.HeSoLuong)</th>
            <th>@Html.DisplayNameFor(p => p.PhuCapVuotKhung)</th>
            <th>@Html.DisplayNameFor(p => p.NgayNangBacLuong)</th>
            <th>@Html.DisplayNameFor(p => p.ChuyeMon)</th>
            <th>@Html.DisplayNameFor(p => p.LLCT)</th>
            <th>@Html.DisplayNameFor(p => p.NVCTTW)</th>
            <th>@Html.DisplayNameFor(p => p.GiangVienKiemChuc)</th>
            <th>@Html.DisplayNameFor(p => p.QLCapPhong)</th>
            <th>@Html.DisplayNameFor(p => p.KTQP)</th>
            <th>@Html.DisplayNameFor(p => p.QLNNCV)</th>
            <th>@Html.DisplayNameFor(p => p.QLNNCVC)</th>
            <th>@Html.DisplayNameFor(p => p.QLNNCVCC)</th>
            <th>@Html.DisplayNameFor(p => p.DanhGiaCBCC)</th>
            <th>@Html.DisplayNameFor(p => p.DanhGiaDangVien)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            int css = 0;
            string cssName = "";
        }
        @foreach (var item in Model)
        {
            i++;
            css++;
            if (css > 2)
            {
                css = 1;
            }
            cssName = "tr" + css.ToString();
            <tr class="@cssName">
                <td>@i.ToString()</td>
                <td>@item.MaCanBo</td>
                <td class="align-middle"> <a asp-area="@ConstArea.NhanSu" asp-action="Edit" ,asp-controller="@ConstController.CanBo" target="_blank" asp-route-id="@item.IDCanBo">@item.HoVaTen</a></td>
                <td>@item.TenChucVu</td>
                <td>@item.DonVi</td>
                <td>@item.NgaySinh</td>
                <td>@item.TenGioiTinh</td>
                <td>@item.SoQuyetDinhBoNhiem</td>
                <td>@item.TenDanToc</td>
                <td>@item.TenTonGiao</td>
                <td>@item.NoiSinh</td>
                <td>@item.ChoOHienNay</td>
                <td>@item.NgayvaoDangDuBi</td>
                <td>@item.NgayVaoDangChinhThuc</td>
                <td>@item.ChuyenNganh</td>
                <td>@item.TenTrinhDoHocVan</td>
                <td>@item.TenTrinhDoChuyenMon</td>
                <td>@item.TenTrinhDoChinhTri</td>
                <td>@item.TenTrinhDoNgoaiNgu</td>
                <td>@item.TenTrinhDoTinHoc</td>
                <td>@item.NgayThamGiaCongTac</td>
                <td>@item.NgayThamGiaCongTac</td>
                <td>@item.NgayThamGiaHDND</td>
                <td>@item.TenNgachLuong</td>
                <td>@item.BacLuong</td>
                <td>@item.HeSoLuong</td>
                <td>@item.PhuCapVuotKhung</td>
                <td>@item.NgayNangBacLuong</td>
                <td>@item.ChuyeMon</td>
                <td>@item.LLCT</td>
                <td>@item.NVCTTW</td>
                <td>@item.GiangVienKiemChuc</td>
                <td>@item.QLCapPhong</td>
                <td>@item.KTQP</td>
                <td>@item.QLNNCV</td>
                <td>@item.QLNNCVC</td>
                <td>@item.QLNNCVCC</td>
                <td>@item.DanhGiaCBCC</td>
                <td>@item.DanhGiaDangVien</td>
                <td>@item.GhiChu</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.IDCanBo!.ToString()!,listRoles:listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen, item.IDCanBo!.ToString(),listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>