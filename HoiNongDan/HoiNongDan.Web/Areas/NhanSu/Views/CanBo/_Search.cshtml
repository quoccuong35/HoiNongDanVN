
@model IEnumerable<CanBoDetailVM>
@{
    string CurrentController = ConstController.CanBo;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table table-bordered text-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            <th></th>
            <th>Hình</th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th class="text-center" data-name="HoVaTen">@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th class="text-center" data-name="TenChucVu">@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenTinhTrang)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenDonVi)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenNgachLuong)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenBacLuong)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HeSo)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="align-middle">
                    @HtmlExtensions.MenuNhanSu(CurrentArea, CurrentController, item.HoVaTen, item.IDCanBo!.Value.ToString(),listRoles: listRoles)
                </td>
                <td class="align-middle">
                    @if (!String.IsNullOrEmpty(item.HinhAnh) && !String.IsNullOrWhiteSpace(item.HinhAnh))
                    {
                        <img alt="image" class="avatar avatar-md br-7" src="@item.HinhAnh">
                    }
                </td>
                <td class="text-center align-middle">
                   <a asp-area="@ConstArea.NhanSu" asp-action="Edit",asp-controller="@ConstController.CanBo" target="_blank" asp-route-id="@item.IDCanBo">@item.MaCanBo</a>
                </td>
                <td class="align-middle">@Html.DisplayFor(p => item.HoVaTen)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenChucVu)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenTinhTrang)</td>
@*                 <td class="align-middle">@Html.DisplayFor(p => item.TenPhanHe)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenCoSo)</td> *@
                <td class="align-middle">@Html.DisplayFor(p => item.TenDonVi)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenNgachLuong)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenBacLuong)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.HeSo)</td>
            </tr>
        }
    </tbody>
</table>