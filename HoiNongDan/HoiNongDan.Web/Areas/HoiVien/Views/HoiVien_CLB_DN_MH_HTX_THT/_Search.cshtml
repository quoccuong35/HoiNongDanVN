@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<HoiVien_CLB_DN_MH_HTX_THTDetailVM>

@{
    string CurrentController = ConstController.HoiVien_CLB_DN_MH_HTX_THT;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.Actions</th>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.SoCCCD)</th>
            <th>@Html.DisplayNameFor(p => p.QuanHuyen)</th>
            <th>@Html.DisplayNameFor(p => p.PhuongXa)</th>
          
            <th>@Html.DisplayNameFor(p => p.Ten)</th>
            <th>@Html.DisplayNameFor(p => p.Loai)</th>
            <th>@Html.DisplayNameFor(p => p.ChoOHienNay)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
          
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen!, item.ID, listRoles: listRoles)
                </td>
                <td class="text-center">@i</td>
                <td>@item.HoVaTen</td>
                <td class="text-center">@item.SoCCCD</td>
                <td>@item.QuanHuyen</td>
                <td>@item.PhuongXa</td>
                <td class="text-center">@item.Ten</td>
                <td class="text-center">@item.Loai</td>
                <td>@item.ChoOHienNay</td>
                <td>@item.GhiChu</td>
               
            </tr>
        }
    </tbody>
</table>
