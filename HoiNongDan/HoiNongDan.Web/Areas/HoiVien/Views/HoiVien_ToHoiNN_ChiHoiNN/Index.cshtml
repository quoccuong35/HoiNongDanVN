@model HoiVien_ToHoiNN_ChiHoiNNSearchVM
@{
    ViewBag.Title = LanguageResource.List + LanguageResource.HoiVien_ToHoiNN_ChiHoiNN.ToLower();
    string CurrentController = ConstController.HoiVien_ToHoiNN_ChiHoiNN;
    string CurrentArea = ConstArea.HoiVien;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
    string listRoles = User != null ? User.FindFirst("Roles").Value : "";
}
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header my-2">
        <div>
            <span class="header-title">@LanguageResource.List @LanguageResource.HoiVien_ToHoiNN_ChiHoiNN.ToLower()</span>
            <div class="rectangle">
                <span> </span>
                <span> </span>
                <span> </span>
            </div>
        </div>
        <div class="d-flex px-2">
            @HtmlExtensions.ExportButton(CurrentArea, CurrentController, listRoles: listRoles)
            @HtmlExtensions.ImportButton(CurrentArea, CurrentController, listRoles: listRoles)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="splitter rounded-3">
                <div class="splitter-head">Tìm kiếm nâng cao</div>
                <div class="splitter-body">
                    <form method="get" id="frmSearch" ,asp-action="_Search">
                        <div class="row my-2">
                            <div class="col-md-2">
                                <label asp-for="MaQuanHuyen"></label>
                                @Html.DropDownList("MaQuanHuyen", null, LanguageResource.Dropdownlist_Menu, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-2">
                                <label asp-for="MaDiaBanHoiVien"></label><span class="text-red">*</span>
                                @Html.DropDownList("MaDiaBanHoiVien", null, LanguageResource.Dropdownlist_Menu, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Ma_ToHoiNganhNghe_ChiHoiNganhNghe"></label>
                                <select asp-for="Ma_ToHoiNganhNghe_ChiHoiNganhNghe" asp-items="@ViewBag.Ma_ToHoiNganhNghe_ChiHoiNganhNghe" class="form-control select2-show-search form-select">
                                    <option selected>@LanguageResource.Dropdownlist_All-</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <label asp-for="MaHoiVien"></label>
                                <input class="form-control" asp-for="MaHoiVien" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="HoVaTen"></label>
                                <input class="form-control" asp-for="HoVaTen" />
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                @HtmlExtensions.SearchButton()
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    <div class="table-responsive" id="divSearchResult"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
   
</div>

<!-- CONTAINER CLOSED -->
@section ScriptCustomized {
    <script src="~/js/diaban_hv_quanhuyen.js"></script>
    <script>
        //load default and set event
        $(document).ready(function () {
            HoiNongDan.SearchInitial("@CurrentUrl");
        });
    </script>
}
