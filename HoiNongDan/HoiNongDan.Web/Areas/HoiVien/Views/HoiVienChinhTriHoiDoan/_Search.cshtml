@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<HoiVienChinhTriHoiDoanDetailVM>

@{
    string CurrentController = ConstController.HoiVienChinhTriHoiDoan;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.SoLuong)</th>
            <th>@Html.DisplayNameFor(p => p.SoDienThoai)</th>
            <th>@Html.DisplayNameFor(p => p.ChoOHienNay)</th>
            <th>@Html.DisplayNameFor(p => p.TenDiaBanHoatDong)</th>
            <th>@Html.DisplayNameFor(p => p.TenDoanTheChinhChi_HoiDon)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td class="text-center">@item.MaCanBo</td>
                <td >@item.HoVaTen</td>
                <td >@item.SoLuong</td>
                <td class="text-center">@item.SoDienThoai</td>
                <td >@item.HoKhauThuongTru</td>
                <td>@item.TenDiaBanHoatDong</td>
                <td>@item.TenDoanTheChinhChi_HoiDon</td>
                <td>@item.GhiChu</td>
                
                <td class="text-center">
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.TenDoanTheChinhChi_HoiDon, item.IDCanBo!.Value.ToString()+"_"+item.MaDoanTheChinhTri_HoiDoan!.Value.ToString(), listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>
