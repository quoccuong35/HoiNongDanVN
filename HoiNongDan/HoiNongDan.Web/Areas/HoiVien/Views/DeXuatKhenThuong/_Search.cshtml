@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<HoiVienDeXuatKhenThuongDetailVM>
@{
    string CurrentController = ConstController.DeXuatKhenThuong;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@LanguageResource.NumberIndex</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th class="text-center" style="vertical-align: middle;" colspan="2">Ngày, tháng, Năm sinh</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.SoCCCD)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.NgayCap)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.DiaChiThuongTru)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.DanToc)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.TonGiao)</th>
            <th class="text-center" style="vertical-align: middle;" colspan="3">Trình độ</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.NgayVaoHoi)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.DaHocLopDang)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.DangHocLopDang)</th>
            <th class="text-center" style="vertical-align: middle;" rowspan="2">@Html.DisplayNameFor(p => p.ChuaHocLopDang)</th>
            <th class="text-center" style="vertical-align: middle;" . rowspan="2">@Html.DisplayNameFor(p => p.DiaBanHND)</th>
            <th class="text-center" style="vertical-align: middle;" . rowspan="2">@Html.DisplayNameFor(p => p.ChiHoiNongDan)</th>
            <th class="text-center" style="vertical-align: middle;" . rowspan="2">@Html.DisplayNameFor(p => p.NamDX)</th>
            <th class="text-center" style="vertical-align: middle;" . rowspan="2" class="text-center">@LanguageResource.Actions</th>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(p => p.Nam)</th>
            <th>@Html.DisplayNameFor(p => p.Nu)</th>
            <th>@Html.DisplayNameFor(p => p.HocVan)</th>
            <th>@Html.DisplayNameFor(p => p.ChuyenMon)</th>
            <th>@Html.DisplayNameFor(p => p.ChinhTri)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@item.HoVaTen</td>
                <td>@item.Nam</td>
                <td>@item.Nu</td>
                <td>@item.SoCCCD</td>
                <td>@item.NgayCap</td>
                <td>@item.DiaChiThuongTru</td>
                <td>@item.DanToc</td>
                <td>@item.TonGiao</td>
                <td>@item.HocVan</td>
                <td>@item.ChuyenMon</td>
                <td>@item.ChinhTri</td>
                <td>@item.NgayVaoHoi</td>
                <td>@item.DaHocLopDang</td>
                <td>@item.DangHocLopDang</td>
                <td>@item.ChuaHocLopDang</td>
                <td>@item.DiaBanHND</td>
                <td>@item.ChiHoiNongDan</td>
                <td>@item.NamDX</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.IDQuaTrinhKhenThuong!.Value, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen!, item.IDQuaTrinhKhenThuong!.Value, listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>
