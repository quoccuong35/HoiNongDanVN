@{
    ViewBag.Title = LanguageResource.List + LanguageResource.BCSLMau1.ToLower();
    string CurrentController = ConstController.BCSLMau1;
    string CurrentArea = ConstArea.HoiVien;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
    string listRoles = User != null ? User.FindFirst("Roles").Value : "";
    int nam = DateTime.Now.Year;
}
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header my-2">
        <div>
            <span class="header-title">@LanguageResource.List @LanguageResource.BCSLMau1.ToLower()</span>
            <div class="rectangle">
                <span> </span>
                <span> </span>
                <span> </span>
            </div>
        </div>
        <div class="d-flex px-2">
            @HtmlExtensions.ExportButton1(CurrentArea, CurrentController, listRoles: listRoles)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="splitter rounded-3">
                <div class="splitter-head">Tìm kiếm nâng cao</div>
                <div class="splitter-body">
                    <form method="get" id="frmSearch" asp-action="_Search">
                        <div class="row my-2">
                            <div class="col-md-3">
                                <label>
                                    Quận/Huyện</label>
                                    @Html.DropDownList("MaQuanHuyen", null, LanguageResource.Dropdownlist_All, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-3">
                                <label>Tên hội nông dân</label>
                                @Html.DropDownList("MaDiaBanHoiVien", null, LanguageResource.Dropdownlist_All, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-3">
                                <label>Chi hội ngành nghề</label>
                                @Html.DropDownList("MaChiHoi", null, LanguageResource.Dropdownlist_All, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                @HtmlExtensions.SearchButton()
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="divSearchResult">
                        <table class="table border text-nowrap text-md-nowrap table-striped mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">@LanguageResource.NumberIndex</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Đơn Vị</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan='2'>Số Lượng</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="3">Độ Tuổi</th>

                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Dân Tộc</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan='2'>Chi Hội</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Đảng Viên</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Danh dự</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">HV Nồng Cốt</th>
                                </tr>
                                <tr>
                                    <th>
                                        Tổng
                                    </th>
                                    <th>
                                        Tổng nữ
                                    </th>
                                    <th>
                                        Nhỏ hơn 40
                                    </th>
                                    <th>
                                        Từ 40 đến dưới 60
                                    </th>
                                    <th>
                                        Từ 60
                                    </th>
                                    <th>
                                        Dân Cư
                                    </th>
                                    <th>
                                        Ngành Nghề
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        Đang tải dữ liệu
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- CONTAINER CLOSED -->
@section ScriptCustomized {
    <script src="~/js/diaban_hv_quanhuyen.js"></script>
    <script>
        //load default and set event
        $(document).ready(function () {
            HoiNongDan.SearchInitial("@CurrentUrl");
        });
       
    </script>
}