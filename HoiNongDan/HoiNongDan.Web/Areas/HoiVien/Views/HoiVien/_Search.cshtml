@model IEnumerable<HoiVienDetailVM>
@{
    string CurrentController = ConstController.HoiVien;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table table-bordered text-nowrap mb-0">
    <thead class="table-primary">
        <tr>
            
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenDiaBanHoatDong)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.DanToc)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TonGiao)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TrinhDoHocvan)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.VaiTro)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.GiaDinhThuocDien)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.NgheNghiepHienNay)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                
                <td class="text-center align-middle">
                    <a asp-area="@ConstArea.HoiVien" asp-action="Edit" asp-controller="@ConstController.HoiVien" target="_blank" asp-route-id="@item.IDCanBo">@item.MaCanBo</a>
                </td>
                <td class="align-middle">@Html.DisplayFor(p => item.HoVaTen)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenChucVu)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TenDiaBanHoatDong)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.DanToc)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.TonGiao)</td>

                <td class="align-middle">@Html.DisplayFor(p => item.TrinhDoHocvan)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.VaiTro)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.GiaDinhThuocDien)</td>
                <td class="align-middle">@Html.DisplayFor(p => item.NgheNghiepHienNay)</td>
            </tr>
        }
    </tbody>
</table>
