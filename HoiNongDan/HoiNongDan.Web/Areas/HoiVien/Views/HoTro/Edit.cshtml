@using HoiNongDan.Models
@using HoiNongDan.Resources

@model HoiVienHoTroVM
@{
    ViewBag.Title = LanguageResource.Edit + LanguageResource.HoiVienVayVon;
    string CurrentController = ConstController.HoTro;
    string CurrentArea = ConstArea.HoiVien;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<style>


    .border-top {
        border-top: 4px dotted blue;
    }
</style>
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header page-header-fix d-flex my-1">
        <div class="fs-16">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="fs-18 fw-600" asp-area="@ConstArea.HoiVien" asp-controller="@ConstController.HoTro" asp-action="Index">@LanguageResource.HoiVienVayVon</a>
                </li>
                <li class="breadcrumb-item fs-18 active" aria-current="page">@LanguageResource.Edit</li>
            </ol>
        </div>
        <div>
            @HtmlExtensions.SaveButton("btn-save", LanguageResource.Btn_Save)
            @HtmlExtensions.SaveButton("btn-save-continue", LanguageResource.Btn_SaveAndContinue)
            @HtmlExtensions.BackButton(CurrentArea,CurrentController)
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary br-te-3 br-ts-3">
                    <h3 class="card-title text-white">Thông tin chi tiết</h3>
                    <div class="card-options ">
                        <a href="javascript:void(0)" class="card-options-collapse" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up text-white"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" id="frmEdit">
                        <div class="row" id="Part_ThongTinNhanSu">
                            @Html.Partial("~/Areas/NhanSu/Views/NhanSuThongTin/_NhanSuThongTin.cshtml", Model.NhanSu)
                        </div>
                        <hr />
                        @Html.Partial("_HoTro",Model)
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
    @section ScriptCustomized{
    <script src="~/js/hoivienhotro.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ("@Model.MaHinhThucHoTro.ToString().ToUpper()" == "945C96EF-EA48-404D-9166-F41342EA48E6") {
                $("#div-SoTienVay").css("display", "block");
                $("#div-ThoiHangChoVay").css("display", "block");
                $("#div-LaiSuatVay").css("display", "block");
                $("#div-NgayTraNoCuoiCung").css("display", "block");
                $("#div-MaNguonVon").css("display", "block");
                $("#div-traxong").css("display", "block");
            }
            HoiNongDan.EditInitial("@CurrentUrl");
        });
    </script>
}