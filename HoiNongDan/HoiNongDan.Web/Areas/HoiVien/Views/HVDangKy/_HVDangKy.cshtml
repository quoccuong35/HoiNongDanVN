@model HVDangKyVM
<div class="row">
    <input asp-for="ID" hidden />
    @Html.AntiForgeryToken()
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="MaDiaBanHoiVien"></label><span class="text-red">*</span>
            <select asp-for="MaDiaBanHoiVien" asp-items="@ViewBag.MaDiaBanHoiVien" class="form-control select2-show-search form-select">
                <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
            </select>
            <span asp-validation-for="MaDiaBanHoiVien" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="NgayDangKy"></label><span class="text-red">*</span>
            <input type="date" asp-for="NgayDangKy" class="form-control">
            <span asp-validation-for="NgayDangKy" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="HoVaTen"></label><span class="text-red">*</span>
            <input type="text" asp-for="HoVaTen" class="form-control">
            <span asp-validation-for="HoVaTen" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="NgaySinh"></label><span class="text-red">*</span>
            <small> Nhập định dạng dd/MM/yyyy</small>
            <input asp-for="NgaySinh" class="form-control">
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="GioiTinh"></label><span class="text-red">*</span>
            <select asp-for="GioiTinh" class="form-control" asp-items="@Html.GetEnumSelectList<GioiTinh>()">
                <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="SoCCCD"></label><span class="text-red">*</span>
            <div class="input-group">
                <input type="text" asp-for="SoCCCD" class="form-control">
                <button class="btn btn-primary" type="button" id="btn-ktsocccd">Kiểm tra</button>
            </div>
        </div>
        <span asp-validation-for="SoCCCD" class="text-danger"></span>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="NgayCapCCCD"></label><span class="text-red">*</span>
            <small> Nhập định dạng dd/MM/yyyy</small>
            <input asp-for="NgayCapCCCD" class="form-control">
            <span asp-validation-for="NgayCapCCCD" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="SoDienThoai"></label> 
            <input asp-for="SoDienThoai" class="form-control">
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-1">
        <div class="form-group">
            <label asp-for="MaDanToc"></label><span class="text-red">*</span>
            <select asp-for="MaDanToc" asp-items="@ViewBag.MaDanToc" class="form-control select2-show-search form-select">
                <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
            </select>
            <span asp-validation-for="MaDanToc" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-1">
        <div class="form-group">
            <label asp-for="MaTonGiao"></label><span class="text-red">*</span>
            <select asp-for="MaTonGiao" asp-items="@ViewBag.MaTonGiao" class="form-control select2-show-search form-select">
                <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
            </select>
            <span asp-validation-for="MaTonGiao" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-1">
        <div class="form-group">
            <label asp-for="MaTrinhDoHocVan"></label><span class="text-red">*</span>
            <select asp-for="MaTrinhDoHocVan" asp-items="@ViewBag.MaTrinhDoHocVan" class="form-control select2-show-search form-select">
                <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
            </select>
            <span asp-validation-for="MaTrinhDoHocVan" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-5 form-group">
        <label asp-for="MaTrinhDoChuyenMon"></label>
        <div class="row">
            <div class="col-5">
                <select asp-for="MaTrinhDoChuyenMon" asp-items="@ViewBag.MaTrinhDoChuyenMon" class="form-control select2-show-search form-select">
                    <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
                </select>
            </div>
            <div class="col-7">
                <input asp-for="ChuyenNganh" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="MaTrinhDoChuyenMon" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="MaTrinhDoChinhTri"></label>
                <select asp-for="MaTrinhDoChinhTri" asp-items="@ViewBag.MaTrinhDoChinhTri" class="form-control select2-show-search form-select">
                    <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
                </select>
                <span asp-validation-for="MaTrinhDoChinhTri" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="MaNgheNghiep"></label>
                <select asp-for="MaNgheNghiep" asp-items="@ViewBag.MaNgheNghiep" class="form-control select2-show-search form-select">
                    <option disabled selected>@LanguageResource.Dropdownlist_Menu-</option>
                </select>
                <span asp-validation-for="MaNgheNghiep" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <label asp-for="HoKhauThuongTru"></label> <span class="text-red">*</span>
        <textarea asp-for="HoKhauThuongTru" rows="5" class="form-control"></textarea>
        <span asp-validation-for="HoKhauThuongTru" class="text-danger"></span>
    </div>
    <div class="col-lg-3">
        <label asp-for="ChoOHienNay"></label> <span class="text-red">*</span>
        <textarea asp-for="ChoOHienNay" rows="5" class="form-control"></textarea>
        <span asp-validation-for="ChoOHienNay" class="text-danger"></span>
    </div>
    <div class="col-lg-3">
        <div class="form-group m-0">
            <div class="form-label">Thông tin khác</div>
            <div class="custom-controls-stacked">
                <label class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="DangVien">
                    <span class="custom-control-label">@LanguageResource.DangVien</span>
                </label>
                <label class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="HoiVienDanCu">
                    <span class="custom-control-label">@LanguageResource.HoiVienDanCu</span>
                </label>
                <label class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="HoiVienNganhNghe">
                    <span class="custom-control-label">@LanguageResource.HoiVienNganhNghe</span>
                </label>
               
            </div>
        </div>
    </div>
</div>
