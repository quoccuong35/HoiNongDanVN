@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<HoiVienCapTheDetailVM>
@{
    string CurrentController = ConstController.HoiVienCapThe;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.GioiTinh)</th>
            <th>@Html.DisplayNameFor(p => p.NgaySinh)</th>
            <th>@Html.DisplayNameFor(p => p.SoCCCD)</th>
            <th>@Html.DisplayNameFor(p => p.NgayCapCCCD)</th>
            <th>@Html.DisplayNameFor(p => p.DiaChi)</th>
            <th>@Html.DisplayNameFor(p => p.SoThe)</th>
            <th>@Html.DisplayNameFor(p => p.NgayCap)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@item.HoVaTen</td>
                <td>@item.GioiTinh</td>
                <td>@item.NgaySinh</td>
                <td>@item.SoCCCD</td>
                <td>@item.NgayCapCCCD</td>
                <td>@item.DiaChi</td>
                <td>@item.SoThe</td>
                <td>@item.NgayCap</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ID, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.HoVaTen!, item.ID, listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>
