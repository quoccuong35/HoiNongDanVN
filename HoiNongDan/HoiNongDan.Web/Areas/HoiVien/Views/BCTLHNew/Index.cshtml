@model BCTLHNewSearchVM
@{
    ViewBag.Title = LanguageResource.List + LanguageResource.BCTLHNew.ToLower();
    string CurrentController = ConstController.BCTLHNew;
    string CurrentArea = ConstArea.HoiVien;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
    string listRoles = User != null ? User.FindFirst("Roles")!.Value : "";
}

<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header my-2">
        <div>
            <span class="header-title">@LanguageResource.List @LanguageResource.BCTLHNew.ToLower()</span>
            <div class="rectangle">
                <span> </span>
                <span> </span>
                <span> </span>
            </div>
        </div>
        <div class="d-flex px-2">
            @HtmlExtensions.ExportButton1(CurrentArea, CurrentController, listRoles: listRoles)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="splitter rounded-3">
                <div class="splitter-head">Tìm kiếm nâng cao</div>
                <div class="splitter-body">
                    <form method="get" id="frmSearch" asp-action="_Search">
                        <div class="row my-2">
                            <div class="col-md-3">
                                <label>Quận/Huyện</label>
                                @Html.DropDownList("MaQuanHuyen", null, LanguageResource.Dropdownlist_All, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-3">
                                <label>Tên hội nông dân</label>
                                @Html.DropDownList("MaDiaBanHoiVien", null, LanguageResource.Dropdownlist_All, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-2">
                                <label asp-for="TuNgay"></label>
                                <input class="form-control" asp-for="TuNgay"/>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="DenNgay"></label>
                                <input class="form-control" asp-for="DenNgay"/>
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                @HtmlExtensions.SearchButton()
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="divSearchResult">
                        <table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="4">@LanguageResource.NumberIndex</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="4">Tên đơn vị</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="12">HỘI VIÊN</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="4">CHI HỘI</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="4">TỔ HỘI</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2" rowspan="2">Hội viên dân tộc, tôn giáo</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Thẻ hội viên</th>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Tổng số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Nữ</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Địa bàn dân cư</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Ngành nghề</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">HV danh dự</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Giảm HV</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Phát triển</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Tổng số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Dân cư</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Ngành nghề</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Tổng số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Dân cư</th>
                                    <th class="text-center" style="vertical-align: middle;" colspan="2">Ngành nghề</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Cấp mới</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="3">Số thẻ đổi và cấp lại</th>
                                </tr>
                                <tr>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Giảm trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Giảm trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Tổng số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Tổng số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Nữ</th>

                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Giảm trong kỳ</th>

                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Giảm trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Phát triển trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Giảm trong kỳ</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Dân tộc thiểu số</th>
                                    <th class="text-center" style="vertical-align: middle;" rowspan="2">Tôn giáo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Đang tải dữ liệu</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- CONTAINER CLOSED -->
@section ScriptCustomized {
    <script src="~/js/diaban_hv_quanhuyen.js"></script>
    <script>
        //load default and set event
        $(document).ready(function () {
            HoiNongDan.SearchInitial("@CurrentUrl");
        });
        
    </script>
}