@using HoiNongDan.Constant
@using HoiNongDan.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<PhatTrienDangDetailVM>
@{
    string CurrentController = ConstController.PhatTrienDang;
    string CurrentArea = ConstArea.HoiVien;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaHV)</th>
            <th>@Html.DisplayNameFor(p => p.TenHV)</th>
          
            <th>@Html.DisplayNameFor(p => p.QuanHuyen)</th>
            <th>@Html.DisplayNameFor(p => p.DiaBanHoiND)</th>
            <th>@Html.DisplayNameFor(p => p.TenVietTat)</th>
            <th>@Html.DisplayNameFor(p => p.Nam)</th>
           
           
            @* <th>@Html.DisplayNameFor(p => p.SoLuong)</th> *@
            <th>@Html.DisplayNameFor(p => p.NoiDung)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@item.MaHV</td>
                <td>@item.TenHV</td>
                <td>@item.QuanHuyen</td>
                <td>@item.DiaBanHoiND</td>
                <td>@item.TenVietTat</td>
                <td>@item.Nam</td>
                @* <td>@item.SoLuong</td> *@
                <td>@item.NoiDung</td>
                <td>@item.GhiChu</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ID!.Value, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.TenVietTat!, item.ID.Value.ToString(), listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>
