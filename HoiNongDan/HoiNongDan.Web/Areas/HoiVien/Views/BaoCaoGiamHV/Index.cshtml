
@{
    ViewBag.Title = LanguageResource.List + LanguageResource.BaoCaoGiamHV.ToLower();
    string CurrentController = ConstController.BaoCaoGiamHV;
    string CurrentArea = ConstArea.HoiVien;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
    string listRoles = User != null ? User.FindFirst("Roles").Value : "";
}
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header my-2">
        <div>
            <span class="header-title">@LanguageResource.List @LanguageResource.BaoCaoGiamHV.ToLower()</span>
            <div class="rectangle">
                <span> </span>
                <span> </span>
                <span> </span>
            </div>
        </div>
        <div class="d-flex px-2">
            @HtmlExtensions.ExportButton1(CurrentArea, CurrentController, listRoles: listRoles)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="splitter rounded-3">
                <div class="splitter-head">Tìm kiếm nâng cao</div>
                <div class="splitter-body">
                    <form method="get" id="frmSearch" asp-action="_Search">
                        <div class="row my-2">
                            <div class="col-md-3">
                                <labe>Quận/Huyện</label>
                                @Html.DropDownList("MaQuanHuyen", null, LanguageResource.Dropdownlist_Menu, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-3">
                                <label>Tên hội nông dân</label>
                                @Html.DropDownList("MaDiaBanHoiVien", null, LanguageResource.Dropdownlist_Menu, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-2">
                                <label>Từ ngày</label>
                                <input type="date" name="TuNgay" class="form-control">
                            </div>
                            <div class="col-md-2">
                                <label>Đến ngày</label>
                                <input type="date" name="DenNgay" class="form-control">
                            </div>
                            <div class="col-2 d-flex align-items-end">
                                @HtmlExtensions.SearchButton()
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="divSearchResult">
                        <thead class="table-primary">
                            <tr>
                                <th class="text-center" style="vertical-align: middle;" rowspan="2">@LanguageResource.NumberIndex</th>
                                <th rowspan="2" class="text-center" style="vertical-align: middle;">  Họ và tên</th>
                                <th colspan="2" class="text-center" style="vertical-align: middle;">Năm sinh</th>
                                <th rowspan="2" class="text-center" style="vertical-align: middle;">Địa chỉ</th>
                                <th rowspan="2" class="text-center" style="vertical-align: middle;">Năm vào hội</th>
                                <th rowspan="2" class="text-center" style="vertical-align: middle;">Lý do giảm</th>
                                <th rowspan="2" class="text-center" style="vertical-align: middle;">Chi hội</th>
                            </tr>
                            <tr>
                                <th class="text-center">Nam</th>
                                <th class="text-center">Nữ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Đang tải dữ liệu</td>
                            </tr>
                        </tbody>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- CONTAINER CLOSED -->
@section ScriptCustomized {
    <script src="~/js/diaban_hv_quanhuyen.js"></script>
    <script>
        //load default and set event
       
        $(document).ready(function () {
            HoiNongDan.SearchInitial("@CurrentUrl");
        });
    </script>
}