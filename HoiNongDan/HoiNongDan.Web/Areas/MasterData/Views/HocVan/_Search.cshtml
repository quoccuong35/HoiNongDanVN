@using HoiNongDan.Models
@using HoiNongDan.Constant
@using HoiNongDan.Resources
@model IEnumerable<HocVanVM>
@{
    string CurrentController = ConstController.TrinhDoHocVan;
    string CurrentArea = ConstArea.MasterData;
    string listRoles = User.FindFirst("Roles").Value;
    listRoles = listRoles == null ? "" : listRoles;

}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaTrinhDoHocVan)</th>
            <th>@Html.DisplayNameFor(p => p.TenTrinhDoHocVan)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th>@Html.DisplayNameFor(p => p.Description)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.MaTrinhDoHocVan)</td>
                <td>@Html.DisplayFor(p => item.TenTrinhDoHocVan)</td>
                <td>@Html.DisplayFor(p => item.OrderIndex)</td>
                <td>@Html.DisplayFor(p => item.Description)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.MaTrinhDoHocVan!,listRoles:listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.TenTrinhDoHocVan, item.MaTrinhDoHocVan!,listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>