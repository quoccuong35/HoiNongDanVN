@using HoiNongDan.Models
@using HoiNongDan.Constant
@{
    ViewBag.Title = LanguageResource.List + LanguageResource.LopHoc.ToLower();
    string CurrentController = ConstController.LopHoc;
    string CurrentArea = ConstArea.MasterData;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
    string listRoles = User != null ? User.FindFirst("Roles")!.Value : "";
}
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header my-2">
        <div>
            <span class="header-title">@LanguageResource.List @LanguageResource.LopHoc.ToLower()</span>
            <div class="rectangle">
                <span> </span>
                <span> </span>
                <span> </span>
            </div>
        </div>
        <div>
            @HtmlExtensions.CreateButton(CurrentArea, CurrentController, listRoles: listRoles, action: "Create")
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="splitter rounded-3">
                <div class="splitter-head">Tìm kiếm nâng cao</div>
                <div class="splitter-body">
                    <form method="get" id="frmSearch" ,asp-action="_Search">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Loại tập huấn-Đào tạo</label>
                                @Html.DropDownList("MaHinhThucHoTro", null, LanguageResource.Dropdownlist_Menu, new { @class = "form-control select2-show-search form-select" })
                            </div>
                            <div class="col-md-2">
                                <label>Tên</label>
                                <input class="form-control" type="text" name="Ten" />
                            </div>
                            <div class="col-md-2">
                                <label>Từ ngày</label>
                                <input class="form-control" type="date" name="TuNgay" />
                            </div>
                            <div class="col-md-2">
                                <label>Đến ngày</label>
                                <input class="form-control" type="date" name="DenNgay" />
                            </div>
                            <div class="col-md-2">
                                <label>Trạng thái</label>
                                @Html.DropDownList("Actived", new List<SelectListItem>(){
                                new SelectListItem(){Text = LanguageResource.Dropdownlist_All, Value = ""},
                                new SelectListItem(){Text = LanguageResource.Actived_True, Value = "true", Selected = true},
                                new SelectListItem(){Text = LanguageResource.Actived_False, Value = "false"}
                                }, new { @class = "form-control" })
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                @HtmlExtensions.SearchButton()
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    <div class="table-responsive" id="divSearchResult"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>
<!-- CONTAINER CLOSED -->
@section ScriptCustomized {
    <script>
        //load default and set event
        $(document).ready(function () {
            HoiNongDan.SearchInitial("@CurrentUrl");
            HoiNongDan.ShowMessage(window.location.href);
        });
    </script>
}