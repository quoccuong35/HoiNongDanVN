@model TonGiaoVM
<div class="row">
    <div class="col-md-3">
        <label asp-for="MaTonGiao"></label><span class="text-red">*</span>
        @if (Model.MaTonGiao != null)
        {
            <input asp-for="MaTonGiao" class="form-control" readonly />
        }
        else
        {
            <input asp-for="MaTonGiao" class="form-control" />
        }
        <span asp-validation-for="MaTonGiao" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="TenTonGiao"></label><span class="text-red">*</span>
        <input asp-for="TenTonGiao" class="form-control" />
        <span asp-validation-for="TenTonGiao" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="OrderIndex"></label>
        <input asp-for="OrderIndex" class="form-control" />
        <span asp-validation-for="OrderIndex" class="text-danger"></span>
    </div>
    @if (@Model.MaTonGiao != null)
    {
        <div class="col-md-4 d-flex align-items-end">
            <fieldset>
                @Html.RadioButtonFor(p=>p.Actived,true) @LanguageResource.Actived_True
                @Html.RadioButtonFor(p=>p.Actived,false) @LanguageResource.Actived_False
            </fieldset>
        </div>
    }
</div>
<div class="row mb-2">
    <div class="col-md-12">
        <label asp-for="Description"></label>
        <textarea rows="3" asp-for="Description" class="form-control"> </textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

</div>