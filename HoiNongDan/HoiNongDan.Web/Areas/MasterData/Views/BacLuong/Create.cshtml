@using HoiNongDan.Models
@using HoiNongDan.Resources

@model BacLuongVM
@{
    ViewBag.Title = LanguageResource.BacLuong;
    string CurrentController = ConstController.BacLuong;
    string CurrentArea = ConstArea.MasterData;
    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<!-- CONTAINER -->
<div class="main-container container-fluid">

    <!-- PAGE-HEADER -->
    <div class="page-header page-header-fix d-flex my-1">
        <div class="fs-16">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="fs-18 fw-600" asp-area="@ConstArea.MasterData" asp-controller="@ConstController.BacLuong" asp-action="Index">@LanguageResource.BacLuong</a>
                </li>
                <li class="breadcrumb-item fs-18 active" aria-current="page">@LanguageResource.Create</li>
            </ol>
        </div>
        <div>
            @HtmlExtensions.SaveButton("btn-save", LanguageResource.Btn_Save)
            @HtmlExtensions.SaveButton("btn-save-continue", LanguageResource.Btn_SaveAndContinue)
            @HtmlExtensions.BackButton(CurrentArea,CurrentController)
        </div>
    </div>
    <!-- PAGE-HEADER END -->
    <!-- ROW-1 OPEN -->
    <!-- Row -->
    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary br-te-3 br-ts-3">
                    <h3 class="card-title text-white">Thông tin chi tiết</h3>
                    <div class="card-options ">
                        <a href="javascript:void(0)" class="card-options-collapse" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up text-white"></i></a>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" id="frmCreate">
                        @Html.AntiForgeryToken()
                        @*<input asp-for="MaNgachLuong" hidden />*@
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="TenBacLuong"></label><span class="text-red">*</span>
                                <input asp-for="TenBacLuong" class="form-control" />
                                <span asp-validation-for="TenBacLuong" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="HeSo"></label><span class="text-red">*</span>
                                <input asp-for="HeSo" class="form-control" />
                                <span asp-validation-for="HeSo" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="OrderIndex"></label><span class="text-red">*</span>
                                <input asp-for="OrderIndex" class="form-control" />
                                <span asp-validation-for="OrderIndex" class="text-danger"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="MaNgachLuong"></label><span class="text-red">*</span>
                                <select asp-for="MaNgachLuong" asp-items="@ViewBag.MaNgachLuong" class="form-control select2-show-search form-select">
                                    <option disabled selected>@LanguageResource.Dropdownlist_Menu</option>
                                </select>
                                <span asp-validation-for="MaNgachLuong" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <label asp-for="Description"></label>
                                <textarea rows="3" asp-for="Description" class="form-control"> </textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
    @section ScriptCustomized{
    <script type="text/javascript">
        $(document).ready(function () {
            HoiNongDan.CreateInitial("@CurrentUrl");
        });
    </script>
}