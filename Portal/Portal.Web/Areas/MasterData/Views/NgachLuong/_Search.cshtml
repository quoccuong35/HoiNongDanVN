@using Portal.Models
@using Portal.Constant
@using Portal.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<NgachLuongVM>
@{
    string CurrentController = ConstController.NgachLuong;
    string CurrentArea = ConstArea.MasterData;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;

}
<style>
    ::-webkit-scrollbar{
       width:10px;
    }
</style>
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaNgachLuong)</th>
            <th>@Html.DisplayNameFor(p => p.TenNgachLuong)</th>
            <th>@Html.DisplayNameFor(p => p.MaLoai)</th>
            <th>@Html.DisplayNameFor(p => p.NamTangLuong)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th>@Html.DisplayNameFor(p => p.Description)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.MaNgachLuong)</td>
                <td>@Html.DisplayFor(p => item.TenNgachLuong)</td>
                <td>@Html.DisplayFor(p => item.MaLoai)</td>
                <td>@Html.DisplayFor(p => item.NamTangLuong)</td>
                <td>@Html.DisplayFor(p => item.OrderIndex)</td>
                <td>@Html.DisplayFor(p => item.Description)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.MaNgachLuong,listRoles:listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.TenNgachLuong, item.MaNgachLuong,listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>