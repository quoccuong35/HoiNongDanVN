
@model IEnumerable<CanBoDetailVM>
@{
    string CurrentController = ConstController.CanBo;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenChucVu)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenTinhTrang)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenPhanHe)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenCoSo)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenDonVi)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenNgachLuong)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.TenBacLuong)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.HeSo)</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">
                    @HtmlExtensions.MenuNhanSu(CurrentArea, CurrentController, item.HoVaTen, item.IDCanBo!.Value.ToString(),listRoles: listRoles)
                </td>
                <td>@Html.DisplayFor(p => item.MaCanBo)</td>
                <td>@Html.DisplayFor(p => item.HoVaTen)</td>
                <td>@Html.DisplayFor(p => item.TenChucVu)</td>
                <td>@Html.DisplayFor(p => item.TenTinhTrang)</td>
                <td>@Html.DisplayFor(p => item.TenPhanHe)</td>
                <td>@Html.DisplayFor(p => item.TenCoSo)</td>
                <td>@Html.DisplayFor(p => item.TenDonVi)</td>
                <td>@Html.DisplayFor(p => item.TenNgachLuong)</td>
                <td>@Html.DisplayFor(p => item.TenBacLuong)</td>
                <td>@Html.DisplayFor(p => item.HeSo)</td>
            </tr>
        }
    </tbody>
</table>
