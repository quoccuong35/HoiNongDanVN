@using Portal.Constant
@using Portal.Resources
@using Microsoft.AspNetCore.Html
@model IEnumerable<DaoTaoDetailVM>
@{
    string CurrentController = ConstController.DaoTao;
    string CurrentArea = ConstArea.NhanSu;
    string listRoles = User.FindFirst("Roles")!.Value;
    listRoles = listRoles == null ? "" : listRoles;
}
<style>
    ::-webkit-scrollbar {
        width: 10px;
    }
</style>
<table id="data-list" class="table border text-nowrap text-md-nowrap table-striped mb-0">
    <thead class="table-primary">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.MaCanBo)</th>
            <th>@Html.DisplayNameFor(p => p.HoVaTen)</th>
            <th>@Html.DisplayNameFor(p => p.TenHinhThucDaoTao)</th>
            <th>@Html.DisplayNameFor(p => p.TenLoaiBangCap)</th>
            <th>@Html.DisplayNameFor(p => p.TenChuyenNganh)</th>
            <th>@Html.DisplayNameFor(p => p.CoSoDaoTao)</th>
            <th>@Html.DisplayNameFor(p => p.NgayTotNghiep)</th>
            <th>@Html.DisplayNameFor(p => p.LuanAnTN)</th>
            <th>@Html.DisplayNameFor(p => p.GhiChu)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.MaCanBo)</td>
                <td>@Html.DisplayFor(p => item.HoVaTen)</td>
                <td>@Html.DisplayFor(p => item.TenHinhThucDaoTao)</td>
                <td>@Html.DisplayFor(p => item.TenLoaiBangCap)</td>
                <td>@Html.DisplayFor(p => item.TenChuyenNganh)</td>
                <td>@Html.DisplayFor(p => item.CoSoDaoTao)</td>
                <td>@Html.DisplayFor(p => item.NgayTotNghiep)</td>
                <td>@Html.DisplayFor(p => item.LuanAnTN)</td>
                <td>@Html.DisplayFor(p => item.GhiChu)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.IDQuaTrinhDaoTao!.Value, listRoles: listRoles)
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.TenChuyenNganh, item.IDQuaTrinhDaoTao!.Value, listRoles: listRoles)
                </td>
            </tr>
        }
    </tbody>
</table>
